{
   "compilerOptions": {
      "target": "ESNext",
      "useDefineForClassFields": true,
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "allowJs": true,
      "checkJs": true,
      "skipLibCheck": false,
      "esModuleInterop": false,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": false,
      "module": "ESNext",
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react-jsx",

      "baseUrl": ".",
      "paths": {
         "@assets/*": ["src/assets/*"],
         "@components/*": ["src/components/*"],
         "@data/*": ["src/data/*"],
         "@utils/*": ["src/utils/*"],
         "@redux/*": ["src/redux/*"],
         "@descriptionConverter/*": ["src/descriptionConverter/*"],
         "@descriptionUpload/*": ["src/descriptionUpload/*"],

         // remove ones bellow
         "@ts/*": ["src/ts/*"],
      }
   },
   "include": ["./src"]
}
